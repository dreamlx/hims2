<div class="col-md-10">
  <h3>
    <%= t(:institution_list) %>
    <small><%= link_to 'to_xls', institutions_path(format: :xlsx) %></small>
  </h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_institution), new_institution_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <% Institution::HEADERS.each do |column| %>
        <th><%= Institution.human_attribute_name(column) %></th>
        <% end %>
        <th colspan="2"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @institutions %>
    </tbody>
  </table>
</div>