<%= simple_form_for(@product, html: { class: 'form-horizontal' }, 
      wrapper: :horizontal_form,
      wrapper_mappings: {
      check_boxes: :horizontal_radio_and_checkboxes,
      radio_buttons: :horizontal_radio_and_checkboxes,
      file: :horizontal_file_input,
      boolean: :horizontal_boolean}) do |f| %>
  <div class="col-md-6">
    <%= f.input :fund_id, collection: Fund.all %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :title1 %>
    <%= f.input :content1 %>
    <%= f.input :title2 %>
    <%= f.input :content2 %>
    <%= f.input :title3 %>
    <%= f.input :content3 %>
    <%= f.input :progress_bar, hint: "From 0 to 100" %>
    <%= f.input :label %>
    <%= f.input :abbr %>
    <%= f.input :currency %>
    <%= f.input :amount %>
    <%= f.input :period %>
    <%= f.input :paid %>
    <%= f.input :sales_period %>
    <%= f.input :block_period %>
    <%= f.input :redeem %>
    <%= f.input :entity %>
    <%= f.input :adviser %>
    <%= f.input :trustee %>
  </div>
  <div class="col-md-6">
    <%= f.input :reg_organ %>
    <%= f.input :website %>
    <%= f.input :agency %>
    <%= f.input :regulatory_filing %>
    <%= f.input :legal_consultant %>
    <%= f.input :audit %>
    <%= f.input :starting_point, as: :text %>
    <%= f.input :rate %>
    <%= f.input :account, as: :text %>
    <%= f.input :progress %>
    <%= f.input :direction %>
    <%= f.input :risk_control %>
    <%= link_to @product.instruction_identifier, @product.instruction.url, class: "col-sm-offset-3 col-sm-9" if @product.instruction? %>
    <%= f.input :instruction %>
    <label class="col-sm-offset-3 col-sm-9">
      <%= f.check_box :remove_instruction %>
      Remove instruction
    </label>
    <%= link_to @product.agreement_identifier, @product.agreement.url, class: "col-sm-offset-3 col-sm-9" if @product.agreement? %>
    <%= f.input :agreement %>
    <label class="col-sm-offset-3 col-sm-9">
      <%= f.check_box :remove_agreement %>
      Remove agreement
    </label>
    <%= f.input :title4 %>
    <%= f.input :content4 %>
    <%= f.input :title5 %>
    <%= f.input :content5 %>
    <%= f.input :title6 %>
    <%= f.input :content6 %>
    <%= f.input :title7 %>
    <%= f.input :content7 %>
  </div>
  <div class="col-md-12">
    <%= f.button :submit %>
  </div>
<% end %>

<div class="col-md-12">
  <%= link_to t(:back), :back %>
</div>