<div class="col-md-10">
  <h3>
    <%= t(:order_list) %>
    <small><%= link_to 'to_xls', orders_path(format: :xlsx) %></small>
  </h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_order), new_order_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <% Order::HEADERS.each do |column| %>
          <th><%= column %></th>
        <% end %>
        <th colspan="3"><%= t(:operations) %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @orders %>
    </tbody>
  </table>
</div>