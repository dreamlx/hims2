<div class="col-md-10">
  <h3><%= t(:order_list) %></h3>
</div>
<div class="col-md-2">
  <%= link_to t(:new_order), new_order_path, class: "btn btn-danger" %>
</div>
<div class="col-md-12">
  <table class="table">
    <tr>
      <% Order.column_names.each do |column| %>
      <th><%= Order.human_attribute_name(column) %></th>
      <% end %>
      <th colspan="2"><%= t(:operations) %></th>
    </tr>
    <%= render @orders %>
  </table>
</div>